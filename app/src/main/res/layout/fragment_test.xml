<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.test.main.TestFragment">

    <Spinner
        android:id="@+id/spinner_of_fragments"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#837575"
        android:spinnerMode="dialog"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_back_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/teal_200"
        android:src="@drawable/baseline_loop_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_of_fragments">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sx"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/name_person_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="11"
                    android:text="Жайыл"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/name_person_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="11"
                    android:text="Нурсултан"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/name_person_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="11"
                    android:text="Данил"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/name_person_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="11"
                    android:text="Азиз"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/name_person_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="11"
                    android:text="Умар"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/name_person_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="11"
                    android:text="Абдулазиз"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/name_person_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="11"
                    android:text="Фарух"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/name_person_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="11"
                    android:text="Нурмухаммед"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_ball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/linear_layout_name"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="тест"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ball_person_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="@string/no"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ball_person_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="@string/no"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ball_person_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="@string/no"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ball_person_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="@string/no"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ball_person_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="@string/no"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ball_person_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="@string/no"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ball_person_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="@string/no"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ball_person_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="@string/no"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_ball">

                <EditText
                    android:id="@+id/et_message_data"
                    android:layout_width="match_parent"
                    android:hint="Сообщение"
                    android:maxLength="210"
                    android:visibility="invisible"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="Save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lin" />

            <Button
                android:id="@+id/btn_save_data_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:text="Save Message"
                app:layout_constraintEnd_toStartOf="@id/btn_save_data"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lin" />

            <LinearLayout
                android:id="@+id/lin_2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/btn_save_data" >

                <EditText
                    android:id="@+id/et_color_data"
                    android:layout_width="match_parent"
                    android:hint="Цвет"
                    android:maxLength="210"
                    android:visibility="invisible"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save_data_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:text="Save Color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lin_2"/>

            <LinearLayout
                android:id="@+id/lin_3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/btn_save_data_color" >

                <EditText
                    android:id="@+id/et_text_color_data"
                    android:layout_width="match_parent"
                    android:hint="Цвет Текста"
                    android:maxLength="210"
                    android:visibility="invisible"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save_data_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:text="Save Text Color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lin_3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txt_news"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="#FFB600"
        android:gravity="center"
        android:text="!"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/spinner_of_fragments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>